    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{text}}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
{{/each}}
<head>
    <meta charset="UTF-8">
    <title>Agregar Articulo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <!--Barra de busqueda -->
</head>

<body>
    <div class="container g-2 p-2 d-flex justify-content-center  align-items-center" >
        <div class="card w-75 shadow-sm" >
            <div class="row g-2 p-2">
                <h2>Agregar un nuevo articulo</h2>
            </div>
            <form class="row g-3 needs-validation" action="/articulos/new-articulo"  method='POST' enctype="multipart/form-data" novalidate>
                <div class="row g-2 p-2">
                    <div class="col">
                        <div class="mb-3">
                            <label for="Nombre" class="form-label">Nombre</label>
                            <input type="text" class="form-control" name="nombre" placeholder="">
                        </div>
                        <div class="mb-3">
                            <label for="Precio" class="form-label">Precio</label>
                            <input type="text" class="form-control" name="precio" placeholder="">
                        </div>
                        <div class="mb-3">

                            <label for="categoria" class="form-label">Categoría</label>
                            <select class="form-select" name="categoria">
                                <option value="1">Mouse</option>
                                <option value="2">Teclado</option>
                                <option value="3">Cables</option>
                                <option value="4">Soportes</option>
                                <option value="5">Sillas</option>
                                <option value="6">Cámaras web</option>
                                <option value="7">Reposa muñecas</option>
                                <option value="8">USB</option>
                                <option value="9">PC Escritorio</option>
                                <option value="10">Laptops</option>
                                <option value="11">Servidores</option>
                                <option value="12">Tablets</option>
                                <option value="13">Procesadores / CPU</option>
                                <option value="14">Tarjetas Graficas / GPU</option>
                                <option value="15">RAM</option>
                                <option value="16">Disco Duro</option>
                                <option value="17">Unidades de estado solido</option>
                                <option value="18">Ventiladores</option>
                                <option value="19">Disipadores</option>
                                <option value="20">Refrigeración Liquida</option>
                                <option value="21">Fuentes de poder</option>
                                <option value="22">Tarjeta Madre</option>
                                <option value="23">Tarjetas PCI</option>
                                <option value="24">Impresoras</option>
                                <option value="25">Multifuncionales</option>
                                <option value="26">Ticket</option>
                                <option value="27">Consumibles</option>
                                <option value="28">Sistemas Operativos</option>
                                <option value="29">Antivirus</option>
                                <option value="30">Offimatica</option>
                                <option value="31">Access Point</option>
                                <option value="32">Antenas</option>
                                <option value="33">Switches</option>
                                <option value="34">Tarjetas de Red</option>
                                <option value="35">Router</option>
                                <option value="36">Camaras y Sistemas de vigilancia</option>
                                <option value="37">Sistemas de alarma</option>
                                <option value="38">Sistemas de Acceso</option>
                                <option value="39">Mac</option>
                                <option value="40">iPad</option>
                                <option value="41">iPhone</option>
                                <option value="42">Apple TV</option>
                                <option value="43">Apple iWatch</option>
                                <option value="44">Celulares</option>
                            </select>
                        </div>
                    </div>
                    <div class="col">
                        <div class="mb-3">
                            <label for="Descripción" class="form-label">Descripción</label>
                            <input type="text" class="form-control" name="descripcion" placeholder="">
                        </div>
                        <div class="mb-3">
                            <label for="Marca" class="form-label">Marca</label>
                            <input type="text" class="form-control" name="marca" placeholder="">
                        </div>
                        <div class="mb-3">
                            <label for="formFile" class="form-label">Imagen</label>
                            <input class="form-control" type="file"  accept="image/*" name="foto">
                        </div>
                    </div>
                    <div class="d-flex flex-row justify-content-end">
                        <button class="btn btn-primary d-flex justify-content-start " type="submit">Guardar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>

